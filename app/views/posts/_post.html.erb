<div class="post-heading">
    <div class="author-name"><%= post.user.display_name %></div>
    <div class="create-date"><%= Date.parse(post.created_at.to_s, '%m-%d-%Y') %></div>
    
    <div class="post-likes">
        <%= link_to image_tag("thumb_up", alt: "Like Post"), post_likes_path(post), data: { "turbo-method": :post } %>
        <%= render "likes/like_counter", post: post %>
    </div>
</div>

<div class="body-container">
    <%= post.body %>
</div>

<div class="comments-container">
    <div class="comment-label">Comments:</div>
    <% post.comments.each do |comment| %>
        <div class="comment">
            <div class="comment-header">
                <%= comment.user.display_name %>
            </div>
            <div class="comment-body">
                <%= comment.body %>
            </div>
        </div>
    <% end %>
</div>