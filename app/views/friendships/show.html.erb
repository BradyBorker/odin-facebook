<div class="active-friends">
    <div>My Friends</div>
    <ul>
        <% @active_friendships.each do |friendship| %>
            <li><%= friendship.friend.display_name %></li>
        <% end %>
    </ul>
</div>

<div class="pending-invitations">
    <div>Pending Friend Invitations</div>
    <div class="pending-container">
        <% @pending_invitations.each do |invitation| %>
            <%= invitation.sender.display_name %>
            <%= link_to "Accept Invititation", friendships_path(friend_id: invitation.sender.id, invitation_id: invitation.id), data: {'turbo-method': :post} %>
         <% end %>
    </div>
</div>
    