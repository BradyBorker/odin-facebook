<div class="user-information-container">
    <!--<div class="header">My Information</div>-->
    <div class="profile-picture">
        <turbo-frame id="profile-picture">
            <% if @user.profile_picture.attached? %>
                <%= link_to @user.profile_picture, edit_user_path(user) %>
            <% else %>
                <%= link_to image_tag("profile_icon", alt: "Profile"), edit_user_path(@user) %>
            <% end %>
        </turbo-frame>
    </div>

    <div class="inner-information">
        <div class="information">
            <div>Email:</div>
            <div><%= @user.email %></div>
        </div>
        <div class="information">
            <div>First Name:</div>
            <div><%= @user.user_information.first_name %></div>
        </div>
        <div class="information">
            <div>Last Name:</div>
            <div><%= @user.user_information.last_name %></div>
        </div>
    </div>
</div>
    
<div class="posts-container user-posts-container">
    <div class="header">My Posts</div>
    <% @posts.each do |post| %>
        <div class="post">
            <%= render "posts/post", post: post %>
        </div>
    <% end %>
</div>