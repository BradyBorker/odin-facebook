<turbo-frame id="profile-picture-frame">
    <% if current_user.profile_picture.attached? %>
        <%= image_tag(@user.profile_picture, alt: "Profile") %>
    <% else %>
        <%= image_tag("profile_icon", alt: "Profile") %>
    <% end %>

    <%= form_with model: @user, multipart: true do |form| %>
        <%= form.file_field :profile_picture %>

        <%= form.submit "Update Profile Picture", data: { turbo_frame: "_top" } %>
    <% end %>
</turbo-frame>